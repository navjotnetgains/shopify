<div id="login-modal-overlay" class="Polaris-Backdrop" style="display: block;">
  <div class="Polaris-Modal-Dialog__Container">
    <div class="Polaris-Modal-Dialog">
      <div class="Polaris-Modal-Header">
        <h2 class="Polaris-Modal-Header__Title">Shopify Customer Login</h2>
        <button id="close-login-modal" class="Polaris-Button Polaris-Button--plain Polaris-Modal-CloseButton">
          <span class="Polaris-Icon Polaris-Icon--colorBase Polaris-Icon--applyColor">
            &times;
          </span>
        </button>
      </div>

      <div class="Polaris-Modal__BodyWrapper">
        <div class="Polaris-Modal__Body">
          <div class="Polaris-FormLayout">
            <div class="Polaris-FormLayout__Item">
              <input id="login-email" type="email" placeholder="Email" class="Polaris-TextField__Input" />
            </div>
            <div class="Polaris-FormLayout__Item">
              <input id="login-password" type="password" placeholder="Password" class="Polaris-TextField__Input" />
            </div>
            <div class="Polaris-FormLayout__Item">
              <button id="login-submit" class="Polaris-Button Polaris-Button--primary">Login</button>
            </div>
            <p id="login-error" class="Polaris-Text--critical" style="display: none;"></p>
            <div id="login-success" class="Polaris-Text--success" style="display: none;">
              <strong>Login successful!</strong>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{ 'app-login.js' | asset_url | script_tag }}

