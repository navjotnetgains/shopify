{% comment %}
Photo Gallery App Block with Polaris-like styling and smaller fonts
{% endcomment %}

<div id="app-gallery" class="Polaris-Page" style="padding:40px; font-size:14px; line-height:1.4;">
  <div class="Polaris-Card" style="padding:20px;">
    <div class="Polaris-Card__Section" style="display:flex; justify-content:space-between; align-items:center; flex-wrap:wrap;">
      <div style="max-width:400px;">
        <h1 class="Polaris-Text--headingXl" style="margin-bottom:10px; font-size:25px;">Get Featured in Our Event Gallery!</h1>
        <p style="font-size:13px;">Upload your event images featuring Zion Cases, and get a chance to be showcased on our website.</p>
      </div>
      <button id="upload-gallery-button" class="Polaris-Button Polaris-Button--primary" style="background:#ff4d4f; color:white; padding:10px 16px; border-radius:6px; font-weight:bold; font-size:13px;">
        Upload Gallery
      </button>
    </div>

    <!-- Hidden login modal container -->
    <div id="login-modal-container" style="display:none;">
      {% render 'login-modal' %}
    </div>
  
    <!-- Hidden upload gallery modal container -->
    <div id="upload-gallery-modal-container" style="display:none;">
      {% render 'upload-gallery-modal' %}
    </div>

    <div class="Polaris-Card__Section" style="margin-top:30px;">
      <h2 class="Polaris-Text--headingMd" style="margin-bottom:20px; font-size:16px;">Approved Galleries</h2>
      <div id="approved-galleries-container" style="display:flex; flex-wrap:wrap; gap:15px;">

      </div>
    </div>
  </div>
</div>

{{ 'app-gallery.js' | asset_url | script_tag }}

